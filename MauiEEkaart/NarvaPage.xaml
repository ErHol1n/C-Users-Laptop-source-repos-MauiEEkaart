<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiEEkaart.NarvaPage">
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="15">
                <!-- Заголовок -->
                <Label Text="Narva" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="DarkBlue" />
                <!-- Картинка -->
                <Image Source="narva.jpg"
                       HeightRequest="250"
                       Aspect="AspectFit"
                       HorizontalOptions="Center" />
                <!-- Описание -->
                <Label Text="Narva on Eesti piirilinn, mis asub Narva jõe ääres. Tuntud kui Narva linnus."
                       FontSize="18"
                       TextColor="Black" 
                       HorizontalOptions="Center" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>